<Window x:Class="SportsClothes.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        xmlns:core="clr-namespace:SportsClothes.CORE;assembly=SportsClothes.CORE"
        xmlns:viewModels="clr-namespace:SportsClothes.UI.ViewModels"
        mc:Ignorable="d"
        Title="Products" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues"
                            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:ProductType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style x:Key="TextBoxWithErrors">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True">
                            <ListBox DockPanel.Dock="Left" ItemsSource="{Binding ElementName=ErrorComponent, Path=AdornedElement.(Validation.Errors)}" DisplayMemberPath="ErrorContent" />
                            <Grid>
                                <Ellipse Width="20" Height="20" Stroke="Red" Fill="Red"></Ellipse>
                                <Label Content="{Binding ElementName=ErrorComponent, Path=AdornedElement.(Validation.Errors).Count}" Foreground="White" ></Label>
                            </Grid>
                            <Border BorderBrush="DarkRed" BorderThickness="2">
                                <AdornedElementPlaceholder Name="ErrorComponent"/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Control.MaxWidth" Value="150"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Control.Margin" Value="20 2 2 50" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <TabControl x:Name="Tc">
        <TabItem Header="Products" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TabItem.DataContext>
                <viewModels:ProductListViewModel x:Name="ProductListViewModel"/>
            </TabItem.DataContext>
            <DockPanel LastChildFill="True">
                <ListBox DockPanel.Dock="Left" Name="ProductListPanel" ItemsSource="{Binding Products}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedProduct}" />

                <StackPanel DockPanel.Dock="Top" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0">Name:</Label>
                        <TextBox Grid.Row="1" Grid.Column="0" MinWidth="100" Text="{Binding FilterValue.SearchTerm}" Margin="0, 0, 5, 10"/>

                        <Label Grid.Row="0" Grid.Column="1">Price lower bound:</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" MinWidth="50" Text="{Binding FilterValue.PriceLowerBound}" Margin="0, 0, 5, 10"/>

                        <Label Grid.Row="0" Grid.Column="2">Price upper bound:</Label>
                        <TextBox Grid.Row="1" Grid.Column="2" MinWidth="50" Text="{Binding FilterValue.PriceUpperBound}" Margin="0, 0, 5, 10"/>

                        <Label Grid.Row="2" Grid.Column="0">Size:</Label>
                        <TextBox Grid.Row="3" Grid.Column="0" MinWidth="50" Text="{Binding FilterValue.Size}" Margin="0, 0, 5, 10"/>

                        <Label Grid.Row="2" Grid.Column="1">Producer:</Label>
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="FilterProducerComboBox"
                              Style="{StaticResource TextBoxWithErrors}"
                              ItemsSource="{Binding FilterProducers}"
                              SelectedValue="{Binding FilterValue.ProducerId}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              Margin="0, 0, 5, 10" />

                        <Label Grid.Row="2" Grid.Column="2">Type:</Label>
                        <ComboBox Grid.Row="3" Grid.Column="2" x:Name="TypeFilterComboBox"
                                  Style="{StaticResource TextBoxWithErrors}"
                                  SelectedValue="{Binding FilterValue.Type}"
                                  Margin="0, 0, 5, 10">
                            <ComboBox.ItemsSource>
                                <CompositeCollection>
                                    <ComboBoxItem Content="All types"/>
                                    <CollectionContainer Collection="{Binding Source={StaticResource dataFromEnum}}" />
                                </CompositeCollection>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,50">
                        <Button MinWidth="85" Command="{Binding FilterDataCommand}" Margin="0, 0, 10, 0">Search</Button>
                        <Button MinWidth="85" Command="{Binding ClearFiltersCommand}" Margin="0, 0, 0, 0">Clear filters</Button>
                    </StackPanel>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Command="{Binding SaveProductCommand}" Margin="10, 0, 10, 10">Save Product</Button>
                    <Button Command="{Binding DeleteProductCommand}" Margin="10, 0, 10, 10">Delete Product</Button>
                    <Button Click="CreateProduct" Margin="10, 0, 10, 10">Add Product</Button>
                </StackPanel>

                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding UpdatedProduct}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid Name="ProductDetailsList" DockPanel.Dock="Bottom" DataContext="{Binding UpdatedProduct}">


                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            
                            
                            
                            <Label Grid.Row="0">Name:</Label>
                            <TextBox Style="{StaticResource TextBoxWithErrors}" Grid.Row="0" Grid.Column="1" MinWidth="150" Text="{Binding Name}"/>
                            <Label Grid.Row="1">Size:</Label>
                            <TextBox Style="{StaticResource TextBoxWithErrors}" Grid.Row="1" Grid.Column="1" MinWidth="150" Text="{Binding Size}"/>
                            <Label Grid.Row="2">Price:</Label>
                            <TextBox Style="{StaticResource TextBoxWithErrors}" Grid.Row="2" Grid.Column="1" MinWidth="150" Text="{Binding Price}"/>
                            <Label Grid.Row="0" Grid.Column="2">Color:</Label>
                            <TextBox Style="{StaticResource TextBoxWithErrors}" Grid.Row="0" Grid.Column="3" MinWidth="150" Text="{Binding Color}"/>
                            <Label Grid.Row="1" Grid.Column="2">Producer:</Label>
                            <ComboBox x:Name="ProducerComboBox" Style="{StaticResource TextBoxWithErrors}" Grid.Row="1" Grid.Column="3" DisplayMemberPath="Name" SelectedItem="{Binding Producer}" />
                            <Label Grid.Row="2" Grid.Column="2">Type:</Label>
                            <ComboBox Style="{StaticResource TextBoxWithErrors}" Grid.Row="2" Grid.Column="3" ItemsSource="{Binding Source={StaticResource dataFromEnum}}" SelectedItem="{Binding Type}" />
                        </Grid>
                    </Grid>
                </Grid>
            </DockPanel>
        </TabItem>


        <TabItem Header="Producers">
            <TabItem.DataContext>
                <viewModels:ProducerListViewModel x:Name="ProducerListViewModel"/>
            </TabItem.DataContext>
            <DockPanel LastChildFill="True">
                <ListBox DockPanel.Dock="Left" Name="ProducerListPanel" ItemsSource="{Binding Producers}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedProducer}" />

                <StackPanel DockPanel.Dock="Top" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0">Name:</Label>
                        <TextBox Grid.Row="1" Grid.Column="0" MinWidth="100" Text="{Binding FilterValue.SearchTerm}" Margin="0, 0, 5, 10"/>

                        <Label Grid.Row="0" Grid.Column="1">Country:</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" MinWidth="100" Text="{Binding FilterValue.Country}" Margin="0, 0, 5, 10"/>

                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,50">
                        <Button MinWidth="85" Command="{Binding FilterDataCommand}" Margin="0, 0, 10, 0">Search</Button>
                        <Button MinWidth="85" Command="{Binding ClearFiltersCommand}" Margin="0, 0, 0, 0">Clear filters</Button>
                    </StackPanel>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Command="{Binding SaveProducerCommand}" Margin="10, 0, 10, 10">Save Producer</Button>
                    <Button Command="{Binding DeleteProducerCommand}" Margin="10, 0, 10, 10">Delete Producer</Button>
                    <Button Click="CreateProducer" Margin="10, 0, 10, 10">Add Producer</Button>
                </StackPanel>


                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding UpdatedProducer}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid Name="ProducerDetails" DataContext="{Binding UpdatedProducer}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0">Name:</Label>
                            <TextBox Style="{StaticResource TextBoxWithErrors}" Grid.Row="0" Grid.Column="1" MinWidth="150" Text="{Binding Name}"/>
                            <Label Grid.Row="1">Country of Origin:</Label>
                            <TextBox Style="{StaticResource TextBoxWithErrors}" Grid.Row="1" Grid.Column="1" MinWidth="150" Text="{Binding CountryOfOrigin}"/>
                            <Label Grid.Column="2" Grid.Row="0">Description:</Label>
                            <TextBox Style="{StaticResource TextBoxWithErrors}" Grid.Row="0" Grid.Column="3" Grid.RowSpan="4" MinWidth="300" TextWrapping="Wrap" Text="{Binding Description }"/>

                        </Grid>
                    </Grid>
                </Grid>
            </DockPanel>
        </TabItem>
    </TabControl>
</Window>